@page
@model WebApplication1.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Dodaj do koszyka";
}

<h1>Dodaj do koszyka</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
         
            Produkt: @Html.DisplayFor(model => model.Product.Name)
            <br />
            <div class="form-group">
                <label asp-for="Order.ProductCount" class="control-label"></label>
                <input asp-for="Order.ProductCount" class="form-control" />
                <span asp-validation-for="Order.ProductCount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Dodaj do koszyka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
