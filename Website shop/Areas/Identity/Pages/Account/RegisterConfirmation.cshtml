@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    W normalnych warunkach ten komunikat dotarł by na maila: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij aby potwierdzić rejestrację</a>
</p>
    }
    else
    {
<p>
        Sprawdź maila aby potwierdzić rejestrację.
</p>
    }
}
